{
  "ts-node": {
    "files": true,
    "require": [
      "./src/global/tests.ts"
    ],
    "transpileOnly": false,
  },
  // typical node project
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      ],
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    // "checkJs": true,
    // "allowJs": true,
    // "alwaysStrict": true,
    // "paths": {
    //   "*": [
    // src/globals/*",
    //     "src/types/*"
    //   ]
    // },
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "src/global"
    ],
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}